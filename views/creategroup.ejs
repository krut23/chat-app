<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Group</title>
  <style>
    body {
      margin: 0;
      padding: 20px;
      font-family: Arial, sans-serif;
      background-color: #f1f1f1;
    }

    .container {
      width: 500px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fcfcfc;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .form-group {
      margin-bottom: 10px;
    }

    .form-group input[type="text"] {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border: 1px solid #ccc;
      box-sizing: border-box;
      border-radius: 4px;
    }

    .form-group button {

      padding: 10px;
      border-radius: 5px;
      border: none;
      background-color: #00b909;
      color: rgb(0, 0, 0);
      cursor: pointer;
    }

    .form-group button:hover {
      border: 2px solid black;
    }

    .group-list {
    margin-top: 20px;
    padding: 10px;
    border: 1px solid #ccc;
    list-style: none;
    overflow-y: scroll;
    max-height: 200px; 
  }
    .group-list li {
      width: auto;
      padding: 5px 0;
      cursor: pointer;
    }

    .group-list li button {
      padding: 5px 10px;
      background-color: #748d75;
      color: #fff;
      border: none;
      cursor: pointer;
    }

    .group-list li button:hover {
      border: 2px solid black;
    }

    .btn-personal_chat {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: none;
      background-color: #3498db;
      color: rgb(22, 22, 22);
    }

    .btn-personal_chat:hover {
      border: 2px solid black;
      background-color: #2980b9;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Group</h1>
    <div class="form-group">
      <label for="group-input">Group Name:</label>
      <input type="text" id="group-input">
      <button id="create-group-button">Create Group</button>
    </div>
    <h2>Available Groups</h2>
    <ul class="group-list"></ul>
    <button class="btn btn-personal_chat" onclick="location.href='/personalchat.ejs'">Personal chat</button>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js"></script>
  <script>
    const socket = io();
    const groupList = document.querySelector('.group-list');
    const createGroupButton = document.getElementById('create-group-button');

    // Function to add a group to the list
    function addGroupToList(group) {
      const listItem = document.createElement('li');
      listItem.textContent = group.name;
      listItem.dataset.groupId = group.groupId || '';

      if (group.groupId) {
        const joinButton = document.createElement('button');
        joinButton.textContent = 'Join';
        joinButton.addEventListener('click', function (event) {
          event.stopPropagation();
          const groupId = listItem.dataset.groupId;
          joinGroup(groupId);
        });

        listItem.appendChild(joinButton);
      }

      groupList.appendChild(listItem);
      groupList.scrollTop = groupList.scrollHeight;
    }

    // Function to create a group
    function createGroup() {
      const groupName = document.getElementById('group-input').value;
      const username = prompt('Enter your username');
      fetch('/api/groups', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ name: groupName, username: username }),
      })
        .then(response => response.json())
        .then(group => {
          addGroupToList(group);
          socket.emit('createGroup', groupName);
        })
        .catch(error => {
          console.error('Error creating group:', error);
        });
    }

    // Function to join a group
    function joinGroup(groupId) {
      window.open('/index.ejs?groupId=' + groupId, '_blank');
    }

    createGroupButton.addEventListener('click', createGroup);

    socket.on('groups', function (groups) {
      groupList.innerHTML = '';
      groups.forEach(function (group) {
        addGroupToList(group);
      });
    });

  </script>
</body>
</html>