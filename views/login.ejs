<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  <style>
    body {
      margin: 0;
      padding: 20px;
      font-family: Arial, sans-serif;
      background-color: #f1f1f1;
    }

    .container {
      width: 300px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fcfcfc;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
    }

    #loginForm {
      margin-bottom: 10px;
    }

    input[type="text"],
    input[type="password"] {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border: 1px solid #ccc;
      box-sizing: border-box;
      border-radius: 4px;
    }

    .error-message {
      color: #ff0000;
      margin-top: 10px;
    }

    .btn {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: none;
      background-color: #00b909;
      color: rgb(0, 0, 0);
      cursor: pointer;
    }

    .btn:hover {
      border: 2px solid black;
    }

    .btn-register {
      background-color: #3498db;
      color: rgb(22, 22, 22);
    }

    .btn-register:hover {
      background-color: #2980b9;
    }

    a {
      display: block;
      text-align: center;
      margin-top: 10px;
      color: #555;
    }
    
  </style>
</head>

<body>
  <div class="container">
    <h1>Login</h1>
    <form id="loginForm">
      <input id="usernameInput" type="text" placeholder="Username" required>
      <input id="passwordInput" type="password" placeholder="Password" required>
      <button class="btn" type="submit">Login</button>
    </form>
    <button class="btn btn-register" onclick="location.href='/register'">Register</button>

  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    const loginForm = document.querySelector('#loginForm');
    const usernameInput = document.querySelector('#usernameInput');
    const passwordInput = document.querySelector('#passwordInput');

    loginForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const username = usernameInput.value;
      const password = passwordInput.value;

      if (username && password) {
        const data = {
          username: username,
          password: password
        };
        // Send the login data to the server
        socket.emit('login', data);
      }
    });

    socket.on('loginSuccess', (data) => {
      console.log('Login successful:', data.message);
      // Redirect to the create group page
      window.location.href = './creategroup.ejs';
    });

    // loginError event
    socket.on('loginError', (data) => {
      console.log('Login error:', data.message);
      const errorElement = document.createElement('p');
      errorElement.className = 'error-message';
      errorElement.textContent = data.message;
      const container = document.querySelector('.container');
      container.appendChild(errorElement);
    });
  </script>
</body>

</html>